@using LoginProgramacion3.Models.ViewModels;
@model UsuarioViewModel




<h1 class="fs-1 text-white text-center mt-5">Login</h1>
<div class="d-flex justify-content-center align-items-center mt-4">
    <form class="col-9 col-sm-9 col-md-8 col-lg-6 col-xl-4  d-flex flex-column justify-content-center" asp-controller="Home" asp-action="Login" method="post">
          <div class="mb-3">
            <label asp-for=Email class="form-label"></label>
            <input asp-for=Email type="email" class="form-control" required>
          </div>
          <div class="mb-3">
            <label asp-for=Password class="form-label"></label>
            <input asp-for=Password type="text" class="form-control" required>
          </div>
          <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class="btn btn-dark px-4  boton-redondeado w-50 mt-2 d-flex justify-content-center align-items-center" action="">
                <span class="fs-5 me-2 mb-1">Ingresar</span>
                <span class="material-symbols-outlined">
                    login
                </span>
            </button>

          </div>
    </form>


</div>
@if (ViewBag.credInvalidas == true){

    <script>
            Swal.fire({
                title: 'Credenciales Inválidas',
                icon: 'error',
                confirmButtonText: 'Aceptar',
                duration:4000
            });
    </script>

}
@if(TempData["registroExitoso"]!= null){
    
    <script>
            Swal.fire({
                title: 'Registro Exitoso!',
                icon: 'success',
                confirmButtonText: 'Aceptar',
                duration:4000
            });
    </script>

}